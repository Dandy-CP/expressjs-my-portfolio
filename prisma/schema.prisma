generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      =  env("DATABASE_URL")
}

model my_projects {
  id            Int               @id @default(autoincrement())
  title         String
  description   String
  tech_stack    String[]
  github        String
  demo          String
  thumbnail     String
}

model blog {
  id            String             @id @db.Uuid @default(uuid())
  title         String
  author        String
  content       String
  thumbnail     String
  tag           String[]
  blogViews     Int                @default(0)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  comment       blogComment[]
}

model blogComment {
  id            String             @id @db.Uuid @default(uuid())
  name          String
  comment       String
  blogId        String             @db.Uuid
  blog          blog               @relation(fields: [blogId], references: [id])
}
